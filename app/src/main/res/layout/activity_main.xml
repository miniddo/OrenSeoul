<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/search"
            android:adjustViewBounds="true"
            android:layout_marginTop="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="66px"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/best_place" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_left"
                android:layout_width="108px"
                android:layout_height="wrap_content"
                android:background="@drawable/left" />

            <FrameLayout
                android:layout_width="864px"
                android:layout_height="640px"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/best_place1" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/best_place2"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/best_place3"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/best_place4"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/best_place5"
                    android:visibility="invisible" />

            </FrameLayout>

            <Button
                android:id="@+id/button_right"
                android:layout_width="108px"
                android:layout_height="wrap_content"
                android:background="@drawable/right" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="66px"
            android:layout_marginTop="30sp"
            android:layout_marginBottom="15sp"
            android:background="@drawable/main_sns"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button_youtube"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:background="@drawable/youtube"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="55sp">
        </Button>

        <Button
            android:id="@+id/button_instagram"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:background="@drawable/instagram"
            android:layout_marginRight="55sp" >
        </Button>

        <Button
            android:id="@+id/button_blog"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:background="@drawable/blog" >
        </Button>

    </LinearLayout>

    <Button
        android:id="@+id/button_main"
        android:layout_width="1080px"
        android:layout_height="149px"
        android:background="@drawable/bottom">

    </Button>

</LinearLayout>